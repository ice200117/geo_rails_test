<%= render partial:"langfang/banner",locals:{banner:@banner} %>
<style>
	#forcastfive
	{
		font-family:'微软雅黑';
		border: 3px solid #E3E9EC;
		border-collapse:collapse;
	}
	#forcastfive td, #forcastfive th
	{
		font-size:1em;
		padding:3px 7px 2px 7px;
	}
	#forcastfive th
	{
		font-size:1.1em;
		text-align:left;
		padding-top:5px;
		padding-bottom:4px;
		background-color:#30A6E5;
		color:#ffffff;
	}
	#forcastfive tr.alt td
	{
		color:#000000;
	}
</style>
<input type="hidden" value='<%= @imgTime %>' id='imgTime'>
<div class="container">
	<div class='row'>
		<div style="font-size:large;">未来5天趋势预报</div>
	</div>
	<div class = 'row'>
		<div class='col-xs-8'>
			<div id="t-t" class="t-t">
				<a href='javascript:void(0)' class='cur'>PM2.5</a>
				<a href='javascript:void(0)' >PM10</a>
				<a href='javascript:void(0)' >SO2</a>
				<a href='javascript:void(0)' >CO</a>
				<a href='javascript:void(0)' >NO2</a>
				<a href='javascript:void(0)' >O3</a>
				<a href='javascript:void(0)' >AQI</a>
				<a href='javascript:void(0)' >能见度</a>
			</div>
		</div>
		<div class='col-xs-4'>
			<div>未来5天趋势预报和气象预报</div>
		</div>
	</div>
	<div class='row'>
		<div class="col-xs-7">
			<div class="row">
				<!--未来5天趋势预报图-->
				<div id="item-content-air" class="t-c">
					<%# <img src="" style='cursor:pointer;' onerror='showOtherPic(this)' width='686px' height='546'> %>
					<img src="" style='cursor:pointer;' width='686px' height='546'>
				</div>
			</div>
		</div>
		<div class='col-xs-5'>
			<table id="forcastfive" width="500" height="300">
				<tr>
					<th width="110">日期</th>
					<th width="60">AQI日均值</th>
					<th width="90">AQI范围</th>
					<th width="160">平均级别</th>
					<th width="60">首要污染物</th>
					<th width="200">天气</th>
				</tr>
				<% for i in (0..4) %>
					<% time = i.day.from_now.strftime("%Y%m%d") %>
					<% t = @forecast_data[time] %>
					<% next unless t %>

					<tr  class="<%= (i==1 || i==3) ? 'alt' : '' %>
					" >
					<td>
						<%= t["date"] %></td>
					<td> <strong><%= t["AQI"] != nil ? t["AQI"].to_i : '-' %></td>
						<td> <strong><%= t["min"] != nil ? t["min"] : '-' %>
							~
							<%= t["max"] != nil ? t["max"] : '-' %></strong>
					</td>
					<td>
						<span class="<%= t["fore_lev"] != nil ? t["fore_lev"] : '' %>
						smallforcast">
						<%= t['level'] !=nil ? t["level"] : '-' %></span>
				</td>
				<td>
					<strong>
						<%= t["main_pol"] != nil ? t["main_pol"] : '-' %></strong>
				</td>

				<td>
					<div>
						<span>
							<%= t["temp2"] !=nil ? t['temp2'] : '-' %>
							℃~
							<%= t["temp1"] !=nil ? t['temp1'] : '-' %>℃</span>
						<span>
							<%= t["tq"] != nil ? t["tp"] : '-' %></span>
						<span>
							<%= t["ws"] !=nil ? t['ws'] : '-' %>
							<%= t["wd"] !=nil ? t['wd'] : '-' %></span>
					</div>
				</td>
			</tr>
		<% end %></table>
	<table style="font-family:'微软雅黑';">
		<tr>
			<td style="font-size:large;">秦皇岛重污染天气预警</td>
		</tr>
		<tr>
			<td>
				<div style="background: url(<%= image_url 'lanse.png' %>
				) no-repeat scroll 5px 10px rgba(0, 0, 0, 0);width:327px;height:60px;padding-top:8px;">
				<table style="height:100%;width:100%;margin-left:60px">
					<tr>
						<td>无预警信息</td>
					</tr>
				</table>
			</div>
		</td>
	</tr>
</table>
</div>
</div>
</div>
