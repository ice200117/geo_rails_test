<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "City", :city %></th>
			<th><%= casein_sort_link "Publish date", :publish_date %></th>
			<th><%= casein_sort_link "Forecast date", :forecast_date %></th>
			<th><%= casein_sort_link "Max forecast", :max_forecast %></th>
			<th><%= casein_sort_link "Min forecast", :min_forecast %></th>
			<th><%= casein_sort_link "Main pollutant", :main_pollutant %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% forecast_daily_data.each do |forecast_daily_datum| %>
		<tr>
			<td><%= casein_table_cell_link forecast_daily_datum.city.city_name, casein_forecast_daily_datum_path(forecast_daily_datum) %></td>
			<td><%= casein_table_cell_link forecast_daily_datum.publish_date, casein_forecast_daily_datum_path(forecast_daily_datum) %></td>
			<td><%= casein_table_cell_link forecast_daily_datum.forecast_date, casein_forecast_daily_datum_path(forecast_daily_datum) %></td>
			<td><%= casein_table_cell_link forecast_daily_datum.max_forecast, casein_forecast_daily_datum_path(forecast_daily_datum) %></td>
			<td><%= casein_table_cell_link forecast_daily_datum.min_forecast, casein_forecast_daily_datum_path(forecast_daily_datum) %></td>
			<td><%= casein_table_cell_link forecast_daily_datum.main_pollutant, casein_forecast_daily_datum_path(forecast_daily_datum) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_forecast_daily_datum_path(forecast_daily_datum), :method => :delete, :data => { :confirm => "Are you sure you want to delete this forecast daily datum?" }) %>
			</td>
		</tr>
	<% end %>
</table>
