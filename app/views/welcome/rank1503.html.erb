							<th><%= tmp['SO2'] %></th>
							<th><%= tmp['NO2'] %></th>
							<th><%= tmp['CO'] %></th>
							<th><%= tmp['O3'] %></th>
							<th><%= tmp['pm10'] %></th>
							<th><%= tmp['pm25'] %></th>
							<th><%= tmp['zonghezhishu'] %></th>
						</tr>
					<% end %>
